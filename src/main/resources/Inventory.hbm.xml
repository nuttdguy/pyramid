<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "org.genspark.inventory.Inventory" table = "inventory">

        <meta attribute = "class-description">This class contains the Inventory detail.</meta>

        <id name = "id" type = "long" column = "id">
            <generator class="native"/>
        </id>

        <property name = "quantity" column = "quantity" type = "int"/>
        <property name = "cost" column = "cost" type = "float"/>
        <property name = "price" column = "price" type = "float"/>
        <property name = "weight" column = "weight" type = "float"/>

    </class>
</hibernate-mapping>